RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Amount thresholds (human units)
USDC_MIN_SWAP=10          # if wallet USDC balance >= this, swap USDC->WETH
ETH_MIN_SWAP=0.003      # minimum chunk for WETH->USDC

SLIPPAGE=2
GAS_INCLUDED=true
RESET_APPROVAL=false

# Submit via MetaMask Transaction API
TX_SUBMIT_BASE=https://transaction.api.cx.metamask.io
STX_CONTROLLER_VERSION=18.1.0

# Debugging (verbose logs for submission/polling)
# DEBUG=true

# Rewards API (MetaMask Mobile Rewards)
REWARDS_API_URL=https://rewards.api.cx.metamask.io
REWARDS_CLIENT_ID=mobile-7.57.0
# REWARDS_LANGUAGE=id-ID
# REWARDS_REFERRAL_CODE=
# REWARDS_SESSIONS_PATH=.rewards-sessions.json

# Quote API base is now hardcoded to https://api-metamask.xto.lol

# Security defaults
ROUTER_ADDRESS=0x9dDA6Ef3D919c9bC8885D5560999A3640431e8e6

# Token addresses on Base (8453)
USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
